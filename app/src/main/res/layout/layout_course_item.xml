<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_course"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/safalata_toolbar_color"
    app:cardUseCompatPadding="true"
    app:contentPaddingLeft="10dp"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@color/white">


        <ImageView
            android:id="@+id/iv_right_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right_arrow"
            >

        </ImageView>


        <TextView
            android:id="@+id/tv_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/iv_right_arrow"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_course"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/iv_right_arrow"
            android:maxLines="2"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14sp" />
        />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/safalata_status_bar_color"
            android:textSize="10sp"
            android:textStyle="bold"
            />


        <!--<Button
            android:id="@+id/btn_open"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/iv_course"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_button"
            android:text="Open"
            android:textAllCaps="false"
            android:textColor="@color/safalata_status_bar_color"
            android:minWidth="0dp"
            android:minHeight="0dp"
            />-->


    </RelativeLayout>
</androidx.cardview.widget.CardView>